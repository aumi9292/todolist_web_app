<!doctype html>
<html lang="en-US">
  <head>
    <title>Todo App</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=PT+Sans">
    <link rel="stylesheet" href="/stylesheets/whitespace-reset.css">
    <link rel="stylesheet" href="/stylesheets/application.css">
  </head>
  <body>
    <header>
      <h1>Todo Tracker</h1>
      <%== yield_content :nav_header %>
    </header>

    <%== flashify(session.delete(:error), "error") if session[:error] %>
    <%== flashify(session.delete(:success), "success") if session[:success] %>

    <main>
      <%== yield %>
    </main>
  </body>
</html>
